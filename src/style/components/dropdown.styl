.dropdown.gmd .dropdown-menu,
.dropup.gmd .dropdown-menu
  padding: 0
  border-width: 0 1 1
  border-color: #fff
  border-radius: 0
  -webkit-box-shadow: 0 2px 4px rgba(0,0,0,.175)
  box-shadow: 0 2px 4px rgba(0,0,0,.175)

.dropdown.gmd .dropdown-menu > li > a,
.dropup.gmd .dropdown-menu > li > a
  padding: 10px 20px
  transition: 0.2s ease background-color
  -moz-transition: 0.2s ease background-color
  -webkit-transition: 0.2s ease background-color

.dropdown.gmd .dropdown-header,
.dropup.gmd .dropdown-header
  padding: 10px 20px

.navbar-nav > gmd-option > .dropdown-menu.gmd
  margin-top: 2px
gmd-select .dropdown.gmd .dropdown-menu
  top: -2px
  z-index: 100000

gmd-select .dropdown.gmd button.gmd
  background : transparent
  text-transform: none
  font-weight: normal
  outline: none
  border-bottom: 1px solid #ccc
  width: 100%
  max-width: 100%
  overflow: hidden
  text-overflow: ellipsis
  text-align: left
  padding: 0

gmd-select .dropdown-menu
  max-width: 100%

gmd-select .item-select
  width: 100%
  max-width: 87%
  display: inherit
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden
  padding-top: 8px
  margin: 0
  padding-left: 10px
  float: left
  padding-bottom: 5px

gmd-select .dropdown.gmd button.gmd > .caret
  float: right
  margin-top: 15px
  margin-right: 10px

gmd-select .select-option
  max-width: 100%
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden

gmd-select .dropdown.gmd label.floating-dropdown
  position: absolute
  top: -16px
  transition: 0.2s ease display
  -moz-transition: 0.2s ease display
  -webkit-transition: 0.2s ease display
  font-weight: 400

.btn-default.active, .btn-default:active, .open>.dropdown-toggle.btn-default
  border-color: transparent;

gmd-select .dropdown.gmd .placeholder
  color: colors.secundaryText

//gmd-select .dropdown.gmd .dropdown-menu gmd-option:not(:first-child)
//  cursor: pointer

gmd-select .dropdown.gmd .dropdown-menu li:first-child a:hover
  background: none

gmd-select .dropdown.gmd .dropdown-menu .active
  color: colors.darkPrimary
  background-color: #f5f5f5

.dropdown-menu.gmd > gmd-option
  position: relative
  display: block

.dropdown-menu.gmd > gmd-option > a
  display: block
  padding: 3px 20px
  clear: both
  font-weight: 400
  line-height: 1.42857143
  color: #333
  white-space: nowrap
