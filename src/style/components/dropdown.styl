.dropdown.gmd .dropdown-menu,
.dropup.gmd .dropdown-menu
  padding: 0
  border-width: 0 1 1
  border-color: #fff
  border-radius: 0
  -webkit-box-shadow: 0 2px 4px rgba(0,0,0,.175)
  box-shadow: 0 2px 4px rgba(0,0,0,.175)
  
.dropdown.gmd .dropdown-menu > gmd-option > a,
.dropup.gmd .dropdown-menu > gmd-option > a
  padding: 10px 20px
  transition: 0.2s ease background-color
  -moz-transition: 0.2s ease background-color
  -webkit-transition: 0.2s ease background-color
  
.dropdown.gmd .dropdown-header,
.dropup.gmd .dropdown-header
  padding: 10px 20px  

.navbar-nav > gmd-option > .dropdown-menu.gmd
  margin-top: 2px
  z-index: 100000
  
gmd-select .dropdown.gmd .dropdown-menu
  top: -2px
  z-index: 100000

gmd-select .dropdown.gmd button.gmd
  text-transform: none
  font-weight: normal
    
gmd-select .dropdown.gmd .placeholder
  color: colors.secundaryText

//gmd-select .dropdown.gmd .dropdown-menu gmd-option:not(:first-child)
//  cursor: pointer

gmd-select .dropdown.gmd .dropdown-menu gmd-option a
  text-decoration: none
  
gmd-select .dropdown.gmd .dropdown-menu gmd-option a:hover
  background-color: #f5f5f5
  
gmd-select .dropdown.gmd .dropdown-menu .active
  color: colors.darkPrimary
  background-color: #f5f5f5

.dropdown-menu.gmd > gmd-option
  position: relative
  display: block

.dropdown-menu.gmd > gmd-option > a
  display: block
  padding: 3px 20px
  clear: both
  font-weight: 400
  line-height: 1.42857143
  color: #333
  white-space: nowrap
