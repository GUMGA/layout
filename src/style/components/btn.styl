.btn.gmd
  text-transform: uppercase
  font-weight: 600
  border: 0
  border-radius: 3px
  transition: all 120ms ease-out
  
.btn.gmd.btn-info
  color: #5bc0de
  background-color: #fff
  border-color: #46b8da
  &:hover
    color: #fff
    background-color: #5bc0de

.btn.gmd.btn-success
  color: #5cb85c
  background-color: #fff
  border-color: #4cae4c
  &:hover
    color: #fff
    background-color: #5cb85c

.btn.gmd.btn-warning
  color: #f0ad4e
  background-color: #fff
  border-color: #eea236
  &:hover
    color: #fff
    background-color: #f0ad4e

.btn.gmd.btn-danger
  color: #d9534f
  background-color: #fff
  border-color: #d43f3a
  &:hover
    color: #fff
    background-color: #d9534f 