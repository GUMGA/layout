@import '../config/variables'

.gumga-layout aside.gl-aside
  width: vars.aside.width
  background-color: vars.aside.backgroundColor
  position: fixed
  top: 0
  bottom: 0
  right: 0
  -webkit-transform: translateX(vars.aside.width)
  transform: translateX(vars.aside.width)
  -webkit-transition: all .25s cubic-bezier(0.4,0.0,0.2,1), visibility 0s linear 0s;
  transition: all .25s cubic-bezier(0.4,0.0,0.2,1), visibility 0s linear 0s;
  z-index: vars.layer.aside
  -webkit-box-shadow: 0 0 4px rgba(0,0,0,.28);
  box-shadow: 0 0 4px rgba(0,0,0,.28);
  z-index: vars.layer.aside

.gumga-layout aside.gl-aside.collapsed
  visibility: visible
  -webkit-transform: translateX(0)
  transform: translateX(0)
